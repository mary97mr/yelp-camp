<%- include("../partials/header") %> 

<header class="jumbotron">
    <div class="container">
        <h1><i class="fas fa-campground"></i> Welcome To YelpCamp!</h1>
        <p class="lead">View our hand-picked campgrounds from all over the world.</p>
        <a href="/campgrounds/new" class="btn btn-info btn-lg" role="button">Add New Campground</a>
    </div>
</header>
<div class="row" >
    <% campgrounds.forEach(function(campground) { %> 
        <div class="col-md-4 col-sm-6">
            <div class="card text-center">
                <img class="card-img-top img-fluid" src="<%= campground.img %>" alt="Responsive image">
                <div class="card-body">
                    <h5 class="card-title"><%= campground.name %></h5>
                    <a href="/campgrounds/<%= campground._id %>" class="btn btn-info">More Info</a>
                </div>
            </div>
        </div>
    <% }); %> 
</div>

<%- include("../partials/footer") %> 