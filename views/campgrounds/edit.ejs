<%- include("../partials/header") %> 

<div class="row">
    <div class="col"></div>
    <div class="col-lg-5 col-md-8 form-style">
        <h1 class="form-header">Edit <%= campground.name %> </h1>
        <div>
            <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <label>Name of Campground</label>
                    <input class="form-control" type="text" name="campground[name]" value="<%= campground.name %>">
                </div>
                <div class="form-group">
                    <label>Price</label>
                    <input class="form-control" type="number" name="campground[price]" value="<%= campground.price %>" min="0" step="0.01" required>
                </div>
                <div class="form-group">
                    <label>Img Url</label>
                    <input class="form-control" type="text" name="campground[img]" value="<%= campground.img %>">
                </div>
                <div class="form-group">
                    <label for="location">Location</label>
                    <input class="form-control" type="text" name="campground[location]" id="location" value="<%= campground.location %>">
                </div>
                <div class="form-group">
                    <label>Description</label>
                    <textarea class="form-control" type="text" cols="30" rows="10" name="campground[description]"><%= campground.description %></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-info btn-block">Update</button>
                </div>
            </form>
            <a href="/campgrounds/<%= campground._id %>">Go back</a>
        </div>
    </div>
    <div class="col"></div>
</div>

<%- include("../partials/footer") %> 