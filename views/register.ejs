<%- include("partials/header") %> 

<div class="row">
    <div class="col"></div>
    <div class="col-lg-5 col-md-8 form-style">
        <h1 class="form-header">Sign Up</h1>
        <div>
            <form class="m-3" action="/register" method="POST">
                <div class="form-group d-flex">
                    <i class="fas fa-user "></i>
                    <input class="form-control" type="text" name="username" placeholder="username" required>
                </div>
                <div class="form-group d-flex">
                    <i class="fas fa-at"></i>
                    <input class="form-control" type="email" name="email" placeholder="youremail@gmail.com" required>
                </div>
                <div class="form-group d-flex">
                    <i class="fas fa-lock"></i>
                    <input class="form-control" type="password" name="password" placeholder="password">
                </div>
                <div class="form-group d-flex">
                    <input class="form-control  ml-5" type="text" name="firstName" placeholder="First Name">
                </div>
                <div class="form-group d-flex">
                    <input class="form-control ml-5" type="text" name="lastName" placeholder="Last Name">
                </div>
                <div class="form-group d-flex">
                    <input class="form-control ml-5" type="text" name="avatar" placeholder="Avatar url">
                </div>
                <div class="form-group d-flex">
                    <input class="form-control ml-5" type="password" name="adminCode" placeholder="Admin Code">
                </div>
                <div class="form-group">
                    <button class="btn btn-info btn-block">Sign Up</button>
                </div>
                <a href="/campgrounds"> Go back</a>
            </form>
        </div>
    </div>
    <div class="col"></div>
</div>

<%- include("partials/footer") %> 