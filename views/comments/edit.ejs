<%- include("../partials/header") %> 

<div class="row">
    <div class="col"></div>
    <div class="col-lg-5 col-md-8 form-style">
        <h1 class="form-header">Edit Comment </h1>
        <div>
            <form action="/campgrounds/<%= campground_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <textarea class="form-control" type="text" cols="30" rows="5" name="comment[text]"><%= comment.text %></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-info btn-lg btn-block">Save</button>
                </div>
            </form>
            <a href="/campgrounds/<%= campground_id %>">Go back</a>
        </div>
        
    </div>
    <div class="col"></div>
</div>


<%- include("../partials/footer") %> 